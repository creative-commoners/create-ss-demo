#!/usr/bin/env php
<?php

define('CREATE_SS_DEMO_ROOT', __DIR__ . '/../');

foreach ([
    // Root project installation, i.e. Travis
    realpath(CREATE_SS_DEMO_ROOT . 'vendor/autoload.php'),
    // Installed globally with Composer
    dirname(CREATE_SS_DEMO_ROOT, 2) . '../vendor/autoload.php',
] as $autoloaderPath) {
    if (file_exists($autoloaderPath)) {
        require_once $autoloaderPath;
    }
}

use CreativeCommoners\CreateSSDemo\BuildCommand;
use Symfony\Component\Console\Application;

$application = new Application();

$application->add(new BuildCommand());

$application->run();
